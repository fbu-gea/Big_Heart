<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:orientation="vertical"
    tools:context=".TimelineActivity">

    <fragment
        android:id="@+id/FragmentPlace"
        android:name="com.codepath.big_heart.Fragments.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="676dp"
        android:layout_alignBottom="@+id/ibMaps"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="55dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/ibHome"
        android:layout_alignParentStart="true"
        app:srcCompat="?attr/colorButtonNormal" />

    <ImageButton
        android:id="@+id/ibHome"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="19dp"
        android:layout_marginBottom="3dp"
        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:gravity="top"
        android:onClick="changeFragment"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/ibMaps"
        android:layout_width="59dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="173dp"
        android:layout_marginRight="173dp"
        android:layout_marginBottom="12dp"
        android:background="#00FFFFFF"
        android:gravity="top"
        android:onClick="changeFragment"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/maps" />

    <ImageButton
        android:id="@+id/ibProfile"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="6dp"
        android:background="#00FFFFFF"
        android:gravity="top"
        android:onClick="changeFragment"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/profile" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:logo="@drawable/heart_logo_vector" />


</RelativeLayout>