<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".FeedActivity">

    <fragment
        android:id="@+id/FragmentPlace"
        android:name="com.codepath.parsetagram.FeedFragment"
        android:layout_width="match_parent"
        android:layout_height="557dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ibHome"
        app:srcCompat="?attr/colorButtonNormal" />

    <ImageButton
        android:id="@+id/ibHome"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"

        android:baselineAlignBottom="true"
        android:cropToPadding="true"
        android:gravity="top"
        android:onClick="changeFragment"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/instagram_home_outline_24" />

    <ImageButton
        android:id="@+id/ibAdd"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:onClick="changeFragment"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/instagram_new_post_outline_24" />

    <ImageButton
        android:id="@+id/ibProfile"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:gravity="top"
        android:onClick="changeFragment"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/instagram_user_outline_24" />


</RelativeLayout>